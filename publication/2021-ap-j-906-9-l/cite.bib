 journal = {ApJ},
 keywords = {Forbush effect, Galactic cosmic rays, Solar coronal mass ejections, Interplanetary physics, Interplanetary magnetic fields, Interplanetary turbulence, 546, 567, 310, 827, 824, 830},
 month = {January},
